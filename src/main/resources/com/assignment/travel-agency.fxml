<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.controller.TravelController">
    <Text layoutX="180.0" layoutY="94.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Destinations">
        <font>
          <Font size="36.0"/>
        </font>
    </Text>
    <Text layoutX="850.0" layoutY="93.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Packages">
        <font>
          <Font size="36.0"/>
        </font>
    </Text>
    <ListView fx:id="destinationListView" layoutX="193.0" layoutY="174.0" prefHeight="200.0" prefWidth="200.0"/>
    <TableView fx:id="packageTableView" layoutX="709.0" layoutY="128.0">
      <columns>
          <TableColumn prefWidth="75.0" text="Name"/>
          <TableColumn prefWidth="75.0" text="Price"/>
          <TableColumn prefWidth="75.0" text="Period"/>
          <TableColumn prefWidth="75.0" text="Details"/>
          <TableColumn prefWidth="75.0" text="Seats"/>
          <TableColumn prefWidth="75.0" text="Status"/>
      </columns>
    </TableView>
    <Button fx:id="addDestinationBtn" layoutX="207.0" layoutY="408.0" mnemonicParsing="false" onAction="#addDestination"
            text="Add"/>
    <Button fx:id="deleteDestinationBtn" layoutX="293.0" layoutY="408.0" mnemonicParsing="false"
            onAction="#deleteDestinationBtn" text="Delete"/>
    <Button fx:id="addPackageBtn" layoutX="769.0" layoutY="570.0" mnemonicParsing="false" onAction="#addPackage"
            text="Add"/>
    <Button fx:id="editPackageBtn" layoutX="891.0" layoutY="570.0" mnemonicParsing="false" onAction="#editPackage"
            text="Edit"/>
    <Button fx:id="deletePackageBtn" layoutX="989.0" layoutY="570.0" mnemonicParsing="false" onAction="#deletePackage"
            text="Delete"/>
</AnchorPane>
