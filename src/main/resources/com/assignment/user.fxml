<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.controller.UserController">
    <Text layoutX="470.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Vacation Packages">
        <font>
            <Font size="36.0" />
        </font>
    </Text>
    <TableView fx:id="packageTableView" layoutX="240.0" layoutY="170.0" prefHeight="200.0" prefWidth="800.0">
        <columns>
            <TableColumn fx:id="destinationCol" prefWidth="104.0" text="Destination" />
            <TableColumn fx:id="nameCol" prefWidth="91.0" text="Name" />
            <TableColumn fx:id="priceCol" minWidth="0.0" prefWidth="108.0" text="Price" />
            <TableColumn fx:id="periodCol" prefWidth="146.0" text="Period" />
            <TableColumn fx:id="detailCol" prefWidth="200.0" text="Details" />
            <TableColumn fx:id="seatCol" minWidth="0.0" prefWidth="149.0" text="Seats" />
        </columns>
    </TableView>
    <MenuButton fx:id="FilterMenuBtn" layoutX="203.0" layoutY="484.0" mnemonicParsing="false" popupSide="RIGHT" text="Filter By:">
        <items>
            <RadioMenuItem mnemonicParsing="false" onAction="#removeFilter" selected="true" text="None" />
            <RadioMenuItem mnemonicParsing="false" text="Destination" />
            <RadioMenuItem mnemonicParsing="false" text="Price" />
            <RadioMenuItem mnemonicParsing="false" text="Period" />
        </items>
    </MenuButton>
    <Button fx:id="bookBtn" layoutX="565.0" layoutY="400.0" mnemonicParsing="false" onAction="#bookVacation" text="Book your vacation!" />
    <Button fx:id="userBookingsBtn" layoutX="583.0" layoutY="597.0" mnemonicParsing="false" onAction="#showUserBookings" text="View Bookings" />
    <Slider fx:id="priceSlider" layoutX="583.0" layoutY="484.0" prefHeight="38.0" prefWidth="249.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
    <DatePicker fx:id="fromDate" layoutX="967.0" layoutY="484.0" onAction="#setFromDate" promptText="from" />
    <DatePicker fx:id="toDate" layoutX="967.0" layoutY="531.0" onAction="#setToDate" promptText="to" />
    <Button fx:id="cancelBtn" layoutX="609.0" layoutY="651.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
    <Button fx:id="applyBtn" layoutX="218.0" layoutY="543.0" mnemonicParsing="false" onAction="#applyFilter" text="Apply" />
    <ListView fx:id="destinationList" layoutX="341.0" layoutY="431.0" prefHeight="200.0" prefWidth="200.0" />
</AnchorPane>
